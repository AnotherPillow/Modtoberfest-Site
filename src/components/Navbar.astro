---
import {isUserAdmin} from "@lib/util";
import NavLink from "./nav/NavLink.astro";
import UserButton from "./ui/UserButton.astro";

const user = Astro.locals.user;
const isAdmin = isUserAdmin(user);
---

<header class = "py-4 px-6 bg-gradient-to-b from-brand-800 via-brand-800 to-brand-900">
    <div class="block md:flex md:gap-x-6">
        <div class = "flex gap-x-6 justify-between my-auto mx-auto max-w-6xl h-14">
            <a href = "/" class = "my-auto"> <img src = "/logo/svg/full/2024.svg" alt = "logo" width = "88" height = "88"/> </a>

                <svg id="nav-controller" class="block md:hidden w-10 h-10 items-center text-orange-200 rounded border-2 border-orange-400 hover:text-white hover:border-white my-auto" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                </svg>

        </div>
        <div class="flex-grow my-auto md:flex flex-col md:flex-row w-full hidden" id="nav">
            <div class = "flex flex-col md:flex-row gap-x-6 w-full text-center">
                <NavLink to = "/">Home</NavLink>
                <NavLink to = "/rules">Rules</NavLink>
                <NavLink to = "/sponsors">Sponsors</NavLink>
                <NavLink to = "/repositories">Repositories</NavLink>
                <NavLink to = "https://discord.modtoberfest.com">Discord</NavLink>
                <NavLink to = "/faq">FAQ</NavLink>
                {isAdmin &&
                        <NavLink to = "/admin">Admin</NavLink>}
            </div>

            <div class="w-full md:w-auto flex-none">
                <UserButton/>
            </div>
        </div>
    </div>
    <script>
        const controller = document.getElementById('nav-controller');
        const nav = document.getElementById("nav");
        if (controller && nav) {
            controller.addEventListener('click', (e) => {
                nav.classList.toggle("hidden")
            })
        }
    </script>
</header>