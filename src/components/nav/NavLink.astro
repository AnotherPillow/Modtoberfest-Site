---
import LinkExternal from "../icon/LinkExternal.astro";
interface Props {
    to: string;
}

const {to} = Astro.props;
const external = to.startsWith("http")
---

{external &&
<>
    <a href = {to} class = "nav-link flex gap-x-1 mx-auto md:mx-0 p-2 md:p-0" target = "_blank" rel = "noreferrer">
        <slot/>
        <LinkExternal/>
    </a>

</>}
{!external &&
<>
    <a href = {to} class = "nav-link  p-2 md:p-0">
        <slot/>
    </a>
</>}
