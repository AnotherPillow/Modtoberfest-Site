---
interface Props {
    classes?: string;
    size?: "xl" | "lg"
}
const {size, classes} = Astro.props;
---

<button class:list = {["lg:mt-0 text-white font-bold bg-orange-400 hover:bg-orange-600 px-4 py-2 rounded-full transition duration-200 ease-in-out transform hover:scale-105 w-full", {
    "px-8 py-4 text-xl": size === "lg",
    "px-10 py-4 text-2xl": size === "xl"
}, classes]}>
    <slot/>
</button>