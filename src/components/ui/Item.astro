---
interface Props {
    title: string;
    multi?: boolean;
    small?: boolean;
    classes?: string;
}

const {title, multi = false, small = false, classes} = Astro.props;
const id = title.toLocaleLowerCase().replace(/\s/g, "-").replace(/\?/, "");
const TitleElement = small ? "h3" : "h2";
---

<div>
    <TitleElement><a id = {id} href = {`#${id}`} class:list={["font-brand", classes]}>{title}</a></TitleElement>

    {multi ?
            <slot/> :
            <p>
                <slot/>
            </p>
    }
</div>